<link rel="stylesheet" href="http://code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css" />

<h2><%= t 'info.your_city' %></h2>

<%= form_tag html: { class: 'form-search' } do %>
  <%= text_field_tag :locale, nil, id: 'locales', class: 'input-xxlarge search-query', data: { source: @locales.collect(&:name) } %>
  <%= submit_tag( t('search'), class: 'btn' ) %>
<% end %>

<h1>Listing locales</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locales.each do |locale| %>
  <tr>
    <td><%= locale.name %></td>
    <td><%= link_to 'Show', locale %></td>
    <td><%= link_to 'Edit', edit_locale_path(locale) %></td>
    <td><%= link_to 'Destroy', locale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Locale', new_locale_path %>
